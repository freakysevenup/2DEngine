#version 130

in vec2 position;
in vec4 colour;
in vec2 texCoords;

out vec2 fragmentPosition;
out vec4 fragmentColor;
out vec2 fragmentUV;

uniform mat4 P;

void main() 
{
    gl_Position.xy = (P * vec4(position, 0.0, 1.0)).xy;
    gl_Position.z = 0.0;
    gl_Position.w = 1.0;
    
    fragmentPosition = position;
    fragmentColor = colour;
    fragmentUV = vec2(texCoords.x, 1.0 - texCoords.y);
}